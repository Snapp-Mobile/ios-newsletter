{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Jekyll serve",
            "type": "shell",
            "command": "/opt/homebrew/opt/ruby/bin/bundle exec jekyll serve",
            "options": {
              "cwd": "${workspaceFolder}/docs"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}